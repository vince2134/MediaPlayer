<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avggo.mediaplayer.ServerSimulationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delay"
        android:id="@+id/delay"
        android:textSize="16sp"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/delayText"
        android:layout_alignEnd="@+id/delayText"
        android:textStyle="bold" />

    <EditText
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/delayText"
        android:layout_below="@+id/delay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loss Probability"
        android:id="@+id/textView3"
        android:textSize="16sp"
        android:layout_below="@+id/delayText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/lossText"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/delayText"
        android:layout_alignStart="@+id/delayText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timeout"
        android:id="@+id/textView4"
        android:textSize="16sp"
        android:layout_below="@+id/lossText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/timeoutText"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verbosity"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:layout_below="@+id/timeoutText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_above="@+id/cancelbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/cancelbutton"
        android:layout_alignStart="@+id/cancelbutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/radioButton3"
        android:layout_alignStart="@+id/radioButton3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
